= partial 'partials/head'

%div{ :id => 'skipnav'}
  = link_to 'Inicio', '#maincontent'
= partial 'partials/training/course-navigation'

-# Main Content

-# Overview Section
%section{ :id => 'overview' }
  %div{ :class => 'container' }
    %div{ :class => 'row' }
      %div{ :class => 'col-lg-12 text-center' }
        %br
        %h2= current_page.data.name
        %hr{ :class => 'star-primary' }
    %div{ :class => 'row' }
      %div{ :class => 'col-lg-1' }
        = image_tag current_page.data.picture, resize_to: '64x64', :class => 'img-responsive', :alt => current_page.data.name
      %div{ :class => 'col-lg-11' }
        %span{ :class => 'text-justify' }= current_page.data.description
        %br
        %br
    %div{ :class => 'row' }
      %div{ :class => 'col-lg-11 col-lg-offset-1' }
        %div{ :class => 'col-lg-3' }
          %table
            %thead
              %tr
                %td{ :class => 'col-md-1' }
                %td{ :class => 'col-md-4' }
            %tbody
              %tr
                %td= t(:skill_level)
                %td
                  %strong= current_page.data.skill_level
        %div{ :class => 'col-lg-3' }
          %table
            %thead
              %tr
                %td{ :class => 'col-md-3' }
                %td{ :class => 'col-md-3' }
            %tbody
              %tr
                %td= t(:duration_hrs)
                %td
                  %strong= current_page.data.duration_hrs
        %div{ :class => 'col-lg-6' }
          %table
            %thead
              %tr
                %td{ :class => 'col-md-1' }
                %td{ :class => 'col-md-6' }
            %tbody
              %tr
                %td= t(:audience)
                %td
                  %strong= current_page.data.audience.join(',')

-# Previous Knowledge Section
%section{ :id => 'previous_knlowdege' }
  %div{ :class => 'container' }
    %div{ :class => 'row' }
      %div{ :class => 'col-lg-12 text-center' }
        %br
        %h2= t(:previous_knlowdege)
        %hr{ :class => 'star-primary' }
    %div{ :class => 'row' }
      %div{ :class => 'col-lg-12' }
        %ol
          - current_page.data.previous_knlowdege.each do |knowledge|
            %li= knowledge

-# Table of Contents Section
%section{ :id => 'table_contents' }
  %div{ :class => 'container' }
    %div{ :class => 'row' }
      %div{ :class => 'col-lg-12 text-center' }
        %br
        %h2= t(:table_contents)
        %hr{ :class => 'star-primary' }
    %div{ :class => 'row' }
      %div{ :class => 'col-lg-12' }
        %ol
          - current_page.data.table_contents.each do |content|
            %li= content

-# Description Section
%section{ :id => 'summary' }
  %div{ :class => 'container' }
    %div{ :class => 'row' }
      %div{ :class => 'col-lg-12 text-center' }
        %br
        %h2= t(:description)
        %hr{ :class => 'star-primary' }
    %div{ :class => 'row' }
      %div{ :class => 'col-lg-12' }
        = yield
