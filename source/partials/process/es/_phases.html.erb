<!-- Phases Section -->
<section id="phases">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2><%= data.process.ssdp.es.phase.title %></h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
              <table class="table table-striped">
                <theader>
                  <tr>
                    <th class="col-md-4"><%= data.process.ssdp.es.phase.table_title_name %></th>
                    <th><%= data.process.ssdp.es.phase.table_title_description %></th>
                  </tr>
                </theader>
                <tbody>
                  <% data.process.ssdp.es.phase.phases.each do |phase| %>
                    <tr>
                      <td class=""><strong><%= phase.title %></strong></td>
                      <td class="text-justify"><%= phase.description %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
          </div>
        </div>
    </div>
</section>
