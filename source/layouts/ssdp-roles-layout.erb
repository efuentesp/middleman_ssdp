<%= partial 'partials/processes-ssdp/roles/navigation' %>

<!-- Main Content -->

<!-- Overview Section -->
<section id="overview">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
          <br/>
          <h2><%= current_page.data.name %></h2>
          <hr class="star-primary">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-1">
        <%= image_tag current_page.data.picture, resize_to: "64x64", :class => 'img-responsive', :alt => current_page.data.name %>
      </div>
      <div class="col-lg-11">
        <span class="text-justify"><%= yield %></span>
      </div>
    </div>
  </div>
</section>

<!-- Seniorities Section -->
<section id="seniorities">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
          <br/>
          <h2><%= t(:seniorities) %></h2>
          <hr class="star-primary">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th><%= t(:seniority) %></th>
              <th><%= t(:comments) %></th>
              <th><%= t(:project_size) %></th>
              <th><%= t(:compexity) %></th>
              <th><%= t(:expertise) %></th>
              <th><%= t(:years_experience) %></th>
            </tr>
          </thead>
          <tbody>
            <% current_page.data.seniorites.each do |seniority| %>
              <tr>
                <td>
                      <%= seniority.name %>
                </td>
                <td>
                  <ul>
                    <% seniority.comments.each do |comment| %>
                      <li><%= comment %></li>
                    <% end %>
                  </ul>
                </td>
                <td>
                  <%= seniority.projects_size %>
                </td>
                <td>
                  <%= seniority.project_compexity %>
                </td>
                <td>
                  <ul>
                    <% seniority.expertise.each do |expertise| %>
                    <li><%= expertise %></li>
                    <% end %>
                  </ul>
                </td>
                <td>
                  <%= seniority.years_experience %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>

<!-- Competencies Section -->
<section id="competencies">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
          <br/>
          <h2><%= t(:competencies) %></h2>
          <hr class="star-primary">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th><%= t(:competency) %></th>
              <th><%= t(:beginner) %></th>
              <th><%= t(:junior) %></th>
              <th><%= t(:proficient) %></th>
              <th><%= t(:senior) %></th>
              <th><%= t(:expert) %></th>
              <th><%= t(:master) %></th>
            </tr>
          </thead>
          <tbody>
            <% current_page.data.competencies.each do |competency| %>
              <tr>
                <td>
                  <%= competency.name %>
                </td>
                <% competency.seniorites.each do |seniority| %>
                  <td>
                    <%= seniority.level %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>

<!-- Tools Section -->
<% if current_page.data.tools %>
  <section id="tools">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
            <br/>
            <h2><%= t(:tools) %></h2>
            <hr class="star-primary">
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <ul>
            <% current_page.data.tools.each do |tool| %>
              <li><%= link_to tool.name, tool.link %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </section>
<% end %>

<!-- Tools Section -->
<% if current_page.data.tools %>
  <section id="training">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
            <br/>
            <h2><%= t(:training) %></h2>
            <hr class="star-primary">
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">

        </div>
      </div>
    </div>
  </section>
<% end %>

<!-- Certifications Section -->
<section id="certifications">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
          <br/>
          <h2><%= t(:certifications) %></h2>
          <hr class="star-primary">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th><%= t(:seniority) %></th>
              <th><%= t(:certifications) %></th>
            </tr>
          </thead>
          <tbody>
            <% current_page.data.seniorites.each do |seniority| %>
              <tr>
                <td>
                  <%= seniority.name %>
                </td>
                <% seniority.certifications.each do |certification| %>
                  <td>
                    <%= link_to certification.name, certification.url %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>

<!-- End Main Content -->

