<!-- Header -->
<header>
    <div class="container" id="maincontent" tabindex="-1">
        <div class="row">
            <div class="col-lg-12">
              <%= image_tag current_page.data.picture, resize_to: "100x100", :class => 'img-responsive', :alt => current_page.data.title %>
              <div class="intro-text">
                  <h1 class="name"><%= current_page.data.title %></h1>
                  <hr class="star-light">
                  <span class="skills"><%= current_page.data.description %></span>
              </div>
            </div>
        </div>
    </div>
</header>
