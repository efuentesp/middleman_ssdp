<!-- Phases Section -->
<section id="phases">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2><%= t(:phases) %></h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
              <table class="table table-striped">
                <theader>
                  <tr>
                    <th class="col-md-4"><%= t(:name) %></th>
                    <th><%= t(:description) %></th>
                  </tr>
                </theader>
                <tbody>

                  <% blog('ssdp-phase').articles.select { |a| a.data[:lang]==current_page.data.lang }.sort_by { |b| b.data.weight }.each do |process| %>
                    <tr>
                      <td>
                        <strong><%= process.data.title %></strong>
                      </td>
                      <td class="text-justify"><%= process.data.description %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
          </div>
        </div>
    </div>
</section>
